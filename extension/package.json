{
  "name": "hindsight-time-travel",
  "displayName": "Hindsight - Code Time Travel",
  "description": "Automatic code snapshots with time travel debugging",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hindsight.startWatching",
        "title": "Hindsight: Start Watching Files"
      },
      {
        "command": "hindsight.stopWatching",
        "title": "Hindsight: Stop Watching Files"
      },
      {
        "command": "hindsight.showStatus",
        "title": "Hindsight: Show Status"
      },
      {
        "command": "hindsight.listSnapshots",
        "title": "Hindsight: List Snapshots"
      },
      {
        "command": "hindsight.openTimeline",
        "title": "Hindsight: Open Time Travel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/diff": "^7.0.2",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "diff": "^8.0.2"
  }
}
